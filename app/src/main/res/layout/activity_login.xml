<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:fillViewport="true"
    tools:context=".activities.LoginActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="12dp">

            <TextView
                android:id="@+id/heading"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:text="Login"
                android:layout_marginTop="15dp"
                android:textSize="24sp" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading"
                android:id="@+id/emailLayout">

                <TextView
                    android:id="@+id/emailTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/email"
                    style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                    app:boxStrokeColor="@color/blue"
                    app:boxStrokeWidth="1dp"
                    android:layout_below="@id/emailTitle"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:hintTextColor="@color/blue"
                    android:textColorHint="@color/text"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    android:hint="Enter your email">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textEmailAddress" />

                </com.google.android.material.textfield.TextInputLayout>

                <TextView
                    android:id="@+id/passwordTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Password"
                    android:layout_below="@id/email"
                    android:textStyle="bold"
                    android:textColor="@color/blue"
                    android:layout_marginTop="15dp"
                    android:textSize="14sp" />

                <com.google.android.material.textfield.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/password"
                    style="@style/ThemeOverlay.Material3.TextInputEditText.OutlinedBox"
                    app:boxStrokeColor="@color/blue"
                    app:boxStrokeWidth="1dp"
                    android:layout_below="@id/passwordTitle"
                    android:layout_marginTop="5dp"
                    app:boxCornerRadiusBottomEnd="12dp"
                    app:boxCornerRadiusBottomStart="12dp"
                    app:hintTextColor="@color/blue"
                    android:textColorHint="@color/text"
                    app:passwordToggleEnabled="true"
                    app:boxCornerRadiusTopEnd="12dp"
                    app:boxCornerRadiusTopStart="12dp"
                    android:hint="Enter your password">

                    <com.google.android.material.textfield.TextInputEditText
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:inputType="textPassword" />

                </com.google.android.material.textfield.TextInputLayout>

                <com.google.android.material.button.MaterialButton
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/password"
                    android:layout_marginTop="10dp"
                    android:text="Login"
                    android:textSize="18dp"
                    android:padding="16dp"
                    app:cornerRadius="12dp"
                    app:strokeWidth="1dp"
                    app:strokeColor="@color/white"
                    app:elevation="16dp"
                    android:id="@+id/login" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_below="@id/login"
                    android:layout_marginTop="15dp">

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Finger Print"
                        android:textSize="18dp"
                        android:padding="16dp"
                        app:cornerRadius="12dp"
                        android:layout_weight="1"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/white"
                        app:elevation="16dp"
                        android:layout_marginEnd="5dp"
                        android:id="@+id/fingerprint" />

                    <com.google.android.material.button.MaterialButton
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Face ID"
                        android:textSize="18dp"
                        android:padding="16dp"
                        app:cornerRadius="12dp"
                        android:layout_weight="1"
                        android:layout_marginStart="5dp"
                        app:strokeWidth="1dp"
                        app:strokeColor="@color/white"
                        app:elevation="16dp"
                        android:id="@+id/faceId" />

                </LinearLayout>

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/bioLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/heading"
                android:visibility="gone"
                android:layout_marginTop="15dp">

                <TextView
                    android:id="@+id/loginTitle"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerHorizontal="true"
                    android:textColor="@color/blue"
                    android:text="Login using finger print"
                    android:textSize="20sp" />

                <com.google.android.material.card.MaterialCardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/loginTitle"
                    android:layout_marginTop="15dp"
                    app:cardBackgroundColor="@color/blue"
                    app:strokeColor="@color/black"
                    app:strokeWidth="1dp"
                    android:layout_margin="10dp"
                    app:cardCornerRadius="30dp"
                    app:cardElevation="12dp">
                    
                    <ImageView
                        android:id="@+id/icon"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/faceid"
                        android:layout_margin="30dp"
                        android:layout_gravity="center" />
                    
                </com.google.android.material.card.MaterialCardView>

            </RelativeLayout>

            <LinearLayout
                android:id="@+id/bottom"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_marginBottom="10dp"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Sign in with"
                    android:textSize="20sp" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:orientation="horizontal">

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="10dp"
                        app:cardElevation="3dp">
                        
                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/google"
                            android:layout_margin="5dp" />
                        
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="10dp"
                        app:cardElevation="3dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/facebook"
                            android:layout_margin="5dp" />

                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:cardBackgroundColor="@color/white"
                        app:cardCornerRadius="12dp"
                        android:layout_margin="10dp"
                        app:cardElevation="3dp">

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/apple"
                            android:layout_margin="5dp" />

                    </androidx.cardview.widget.CardView>
                    
                </LinearLayout>
                
                <com.google.android.material.button.MaterialButton
                    android:id="@+id/signup"
                    style="@style/Widget.Material3.Button.TextButton"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/text2"
                    android:text="@string/don_t_have_account_sign_up" />
                
            </LinearLayout>

        </RelativeLayout>

</androidx.core.widget.NestedScrollView>