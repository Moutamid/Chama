<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Chama" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!--  Font Family -->
        <item name="android:fontFamily">@font/outfit</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="NavigationTheme" parent="Base.Theme.Chama">
        <item name="android:layout_marginTop">03dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">03dp</item>
    </style>

    <style name="Theme.Chama" parent="Base.Theme.Chama" />
</resources>