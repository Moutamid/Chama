<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Chama" parent="Theme.Material3.Light.NoActionBar">
        <item name="colorPrimary">@color/blue</item>
        <item name="colorPrimaryVariant">@color/blue</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/blue</item>
        <item name="colorSecondaryVariant">@color/blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!--  Font Family -->
        <item name="android:fontFamily">@font/outfit</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:textColor">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/blue</item>
        <item name="android:windowLightStatusBar">false</item>
        <item name="android:windowDisablePreview">true</item>
    </style>

    <style name="NavigationTheme" parent="Base.Theme.Chama">
        <item name="android:layout_marginTop">03dp</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:layout_marginRight">03dp</item>
    </style>

    <style name="ActionBarTitle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">18sp</item>
    </style>
    <style name="ActionBarSubTitle" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="android:textSize">13sp</item>
    </style>

    <style name="Theme.Chama" parent="Base.Theme.Chama" />

    <style name="BottomSheetAnim">
        <item name="android:windowEnterAnimation">@animator/slide_in_bottom</item>
        <item name="android:windowExitAnimation">@animator/slide_out_bottom</item>
    </style>

    <style name="menu_labels_style">
        <item name="android:background">@drawable/fab_label_background</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="ChipsColor" parent="Widget.MaterialComponents.Chip.Choice">
        <item name="chipBackgroundColor">@color/chip_color</item>
        <item name="android:textColor">@color/text_color</item>
        <item name="checkedIconTint">@color/grey</item>
    </style>

</resources>